          <p class="card-text">
            <ul style="list-style: none; margin-left: -2rem;">
            <li><b><%= listing.name %></b></li>
            <li><%= listing.specialization %></li>
            <li><%= listing.info %></li>
           
            </ul>
          </p>
        </div>
      </div>

      <% } %>
